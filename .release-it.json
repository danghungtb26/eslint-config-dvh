{
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireBranch": "master"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }